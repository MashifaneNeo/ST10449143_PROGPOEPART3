<Window x:Class="ST10449143_PROGPOEPart3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity ChatBot" Height="600" Width="800">
    <Grid>
        <ScrollViewer Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="ChatPanel" Margin="10"/>
        </ScrollViewer>

        <TextBox Name="InputBox" Height="30" VerticalAlignment="Bottom" Margin="10,0,90,10"/>
        <Button Content="Send" Width="70" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Click="SendButton_Click"/>
    </Grid>
</Window>
